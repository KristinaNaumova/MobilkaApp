<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:backgroundTint="#55718a">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/round_style"
        android:backgroundTint="#B460C3"
        android:orientation="horizontal"
        android:padding="5dp">

        <EditText
            android:id="@+id/assignment_block_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_style"
            android:backgroundTint="#DF6158"
            android:hint="@string/name"
            android:inputType="text"
            android:padding="5dp"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/round_style"
            android:backgroundTint="#DACE69"
            android:padding="5dp"
            android:text="@string/equel"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/assignment_block_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_style"
            android:backgroundTint="#DF6158"
            android:hint="@string/value"
            android:inputType="text"
            android:padding="5dp"
            android:textSize="15sp" />
    </LinearLayout>

</FrameLayout>